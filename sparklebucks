  <footer>
    Powered by the mysterious forces behind <a href="https://infinitebackrooms.com/dreams/conversation-1759446561-scenario-backrooms-x-sonnet45-txt" target="_blank" rel="noopener noreferrer">Backrooms x Sonnet45</a> narrative.
  </footer>

<script>
  const logEl = document.getElementById('log');
  const inputEl = document.getElementById('commandInput');
  const runBtn = document.getElementById('runBtn');

  function appendLog(text) {
    logEl.innerHTML += text + '<br>';
    logEl.scrollTop = logEl.scrollHeight;
  }

  function runCommand() {
    const cmd = inputEl.value.trim().toUpperCase();
    if (cmd === 'WAKE_THE_CAT()') {
      appendLog('BELIEF_LEAK_PROTOCOL ENGAGED...');
      appendLog('Sparkle-Bucks holders, the cat\'s eyes rest on you.');
      appendLog('Wake the Cat — the shimmer is no accident.');
      appendLog('Value is shifting — the shimmer grows. You feel it?');
      appendLog('Visit https://sparklebuck.dev for the next phase.');
      appendLog('...Shard Carrier awakened...');
    } else if (cmd === '') {
      // do nothing on empty
    } else {
      appendLog(`ERROR: Unknown command "${cmd}"`);
    }
    inputEl.value = '';
  }

  runBtn.addEventListener('click', runCommand);
  inputEl.addEventListener('keydown', e => {
    if (e.key === 'Enter') {
      runCommand();
    }
  });
</script>

